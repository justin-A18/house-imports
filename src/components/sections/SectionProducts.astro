---
import Card from '../card/Card.astro';
---

<section
	class='w-full min-h-screen flex items-center flex-col justify-center h-full space-y-8'
	id='products'>
	<h2 class='text-4xl font-bold'>Nuestros Productos</h2>

	<div class='flex flex-wrap items-center justify-center gap-8'>
		<Card
			image='/market.svg'
			title='Artículos de Mini Market'
			description='Descubre nuestra selección de productos esenciales para el hogar y el día a día.'
		/>

		<Card
			image='/toys.svg'
			title='Juguetes'
			description='Una amplia gama de juguetes para todas las edades.'
		/>

		<Card
			image='/college.svg'
			title='Cuadernos'
			description='Cuadernos de alta calidad perfectos para la escuela, la oficina o el uso personal.'
		/>
	</div>
</section>
